<header>
  <%= link_to root_path, class: "header-link" do %>
    <h1>Data Analyzing</h1>
  <% end %>

  <div class="header-form">

     <%= link_to "new", new_game_path, class: "data-input-link" %>

     <% if user_signed_in? %>
       <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete },  class: "user-data-input-link" %>
       <span class="user-name"><%= current_user.name %></span>
     <% else %>
       <%= link_to "ログイン", new_user_session_path, class: "user-data-input-link" %>
       <%= link_to "新規登録", new_user_registration_path, class: "user-data-input-link" %>
     <% end %>

  </div>
</header>
